# Database
POSTGRES_USER=altai
POSTGRES_PASSWORD=altai
POSTGRES_DB=digital-twin
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# pgAdmin defaults (change in production)
PGADMIN_DEFAULT_EMAIL=admin@local
PGADMIN_DEFAULT_PASSWORD=admin

# Auth defaults
JWT_SECRET_KEY=change-me-to-a-secure-random-key
CLIENT_URL=http://localhost:3000

# S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=audios
S3_REGION=us-east-1

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# LLM / GenAI settings
# API key for the LLM provider (required for production/testing against cloud models)
LLM_API_KEY=change-me-to-a-secure-random-key
# Optional: endpoint override if using a proxy or private LLM endpoint
LLM_API_URL=
# Optional model overrides (defaults exist in code)
CHAT_MODEL=gemini-3-pro-preview
EMBEDDING_MODEL=text-embedding-004

# Vector DB / embeddings
# Qdrant connection URL (must include host and port), e.g. http://localhost:6333
VECTOR_DB_URL=http://localhost:6333
# Embedding/vector size (REQUIRED) â€” set to the embedding dimension used by your model
VECTOR_SIZE=768
