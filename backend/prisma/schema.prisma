generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int                    @id @default(autoincrement())
  username              String                 @unique
  password              String
  gender                String
  birthdate             DateTime
  createdAt             DateTime               @default(now()) @map("created_at")
  userInterviewAnswers UserInterviewAnswer[]
}

model InterviewQuestion {
  id        Int                @id @default(autoincrement())
  question  String
  createdAt DateTime           @default(now()) @map("created_at")
  answers   InterviewAnswer[]
  @@map("OnboardingQuestion")
}

model InterviewAnswer {
  id                    Int                    @id @default(autoincrement())
  answer                String
  createdAt             DateTime               @default(now()) @map("created_at")
  interviewQuestionId  Int                    @map("onboarding_question_id")
  interviewQuestion    InterviewQuestion      @relation(fields: [interviewQuestionId], references: [id])
  userInterviewAnswers UserInterviewAnswer[]
  @@map("OnboardingAnswer")
}

model UserInterviewAnswer {
  id                 Int                @id @default(autoincrement())
  userId             Int                @map("user_id")
  interviewAnswerId Int                @map("onboarding_answer_id")
  createdAt          DateTime           @default(now()) @map("created_at")
  user               User               @relation(fields: [userId], references: [id])
  interviewAnswer   InterviewAnswer   @relation(fields: [interviewAnswerId], references: [id])
  answerAnalyses   AnswerAnalysis[]
  @@map("UserOnboardingAnswer")
}

model AnswerAnalysis {
  id           Int                  @id @default(autoincrement())
  userAnswerId Int                  @map("user_answer_id")
  analysisData String               @map("analysis_data")
  createdAt    DateTime             @default(now()) @map("created_at")
  userAnswer   UserInterviewAnswer @relation(fields: [userAnswerId], references: [id])
  @@map("QuestionAnalysis")
}
